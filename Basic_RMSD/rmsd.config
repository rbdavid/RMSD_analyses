# NECESSARY PARAMETERS
ref_pdb = '../truncated.pdb' 		# Local or Global position of the pdb file of the average structure of the system to be analzyed
pdb = '../truncated.pdb'	# Local or Global position of a pdb file of the MD system that will be analyzed
traj_loc = '../../Trajectories/production.%s/production.%s.dcd'		# sample Local or Global position of the directory where a production trajectory is located; %s correspond to printing a string where the %s corresponds. The sample provided assumes each trajectory is stored in a directory named production.# and called production.#.dcd where # corresponds to the trajectory number
start = AAA		# the integer of the trajectory that will be first to be analyzed
end = BBB		# the integer of the trajectory that will be last to be analyzed
Wrapped = True
outputname = 'XXX.YYY.amber_apo.rmsd.dat'
selection_file = 'selection_list.py'

# OPTIONAL PARAMETERS
# ATOM SELECTION PARAMETERS
alignment = 'protein and name CA and (resid 20:25 50:55 73:75 90:94 112:116 142:147 165:169 190:194 214:218 236:240 253:258 303:307)'
wrapping_selection = 'not (resname WAT or resname Na+ or resname Cl- or protein)'
substrates = 'nucleic or resname A3 A5 U3 U3 G5 G3 C5 C3 atp adp PHX MG'
homemade_selections = ['A5','A3','A','G5','G3','G','C5','C3','C','T5','T3','T','U5','U3','U','atp','adp','PHX','MG']

# OUTPUT PARAMETERS
write_summary = True		# Boolean value; if True, the script will print out a summary file that breaks down the parameters used in the analysis and how to rerun the same analysis
summary_filename = 'XXX.YYY.amber_apo.rmsd'
selection_output = 'selection_list.out'

